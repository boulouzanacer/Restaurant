<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- view background color -->
    <solid android:color="@color/color_herder_reciept">
    </solid>


    <!-- Take off this gradiant to return to original design -->
    <gradient
        android:angle="90"
        android:centerColor="#f1f2fd"
        android:endColor="#ffffff"
        android:startColor="#f8f8fa"
        android:type="linear" />

    <!-- If you want to add some padding -->
    <padding
        android:right="10dp"
        android:left="10dp" >
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="3dp">
    </corners>

</shape>