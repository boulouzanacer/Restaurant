<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/receipt_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/Textsize_item"
            android:text="Sandwish"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/Textsize_item"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item"
            android:layout_toEndOf="@+id/item" />


        <TextView
            android:id="@+id/price"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="90DA"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/Textsize_item"
            android:layout_marginRight="20dp" />

       <View
           android:id="@+id/emporter_indicator"
           android:layout_width="8dp"
           android:layout_height="match_parent"
           android:layout_marginRight="20dp"
           android:background="@color/red_alizarin"/>

    </LinearLayout>
</LinearLayout>