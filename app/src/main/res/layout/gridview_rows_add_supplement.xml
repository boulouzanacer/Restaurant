<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutprincipal"
    android:layout_width="80dp"
    android:layout_height="120dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    android:clickable="true"
    android:background="@drawable/layout_selector"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/post_menu_image"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@mipmap/img_not_found"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />


  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_marginBottom="10dp"
      android:layout_alignParentBottom="true"
      android:background="@color/turquoise"
      android:layout_below="@+id/post_menu_image"
      android:layout_alignParentRight="true"
      android:layout_alignParentLeft="true">

      <TextView
          android:id="@+id/name_supplement"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_gravity="center"
          android:text="Sandwiches"
          android:textSize="10dp"
          android:textColor="#333333"
          android:textStyle="bold"
          android:background="@android:color/transparent"
          android:alpha="0.8" />

      <TextView
          android:id="@+id/price_supplement"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_gravity="center"
          android:text="$ 100"
          android:textSize="10dp"
          android:textColor="#333333"
          android:textStyle="normal"
          android:background="@android:color/transparent"
          android:alpha="0.8"
          android:layout_below="@+id/name_supplement"
          android:layout_centerHorizontal="true" />
  </RelativeLayout>

</RelativeLayout>
