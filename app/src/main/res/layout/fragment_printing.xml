<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/linearLayout7">

            <TextView
                android:id="@+id/title_printer_configuration"
                android:layout_width="534dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Configuration imprimantes"
                android:textSize="30dp"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/Details_config_imp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:alpha="0.5"
                android:layout_marginTop="5dp"
                android:text="Vous permet de configurer toutes la list des imprimentes disponibles sur le serveur." />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size"
                android:background="@color/divider" />
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout7">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/ic_printer"
                android:layout_alignTop="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:layout_marginStart="13dp"
                android:id="@+id/imageView7" />

            <TextView
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:text="Port Imprimente :"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="110dp"
                android:id="@+id/textView5" />


            <TextView
                android:layout_marginTop="15dp"
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Des Imprimente :"
                android:id="@+id/des_imp"
                android:layout_below="@+id/Details_config_ticket"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/ic_printer"
                android:id="@+id/imageView_imp"
                android:layout_alignBottom="@+id/des_imp"
                android:layout_alignRight="@+id/test" />

            <Spinner
                android:layout_marginLeft="20dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/spinner_list_imp1"
                android:textColor="@color/concrete"
                android:layout_alignTop="@+id/des_imp"
                android:layout_alignLeft="@+id/port"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/title_reciep_printer_configuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Configuration imprimante ticket"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/test"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/Details_config_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0.5"
                android:layout_below="@+id/title_reciep_printer_configuration"
                android:text="Vous permet de configurer l'imprimantes ticket addition" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_below="@+id/Details_config_ticket"
                android:layout_height="@dimen/divider_size"
                android:background="@color/divider" />
            <Button
                android:id="@+id/test_ticket"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                style="@style/dialog_blue_button"
                android:layout_gravity="center"
                android:text="Tester et Sauvegarder"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/des_imp"
                android:layout_alignLeft="@+id/des_imp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="10dp"
                android:id="@+id/imageView6"
                android:src="@mipmap/printer"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/spinner_list_imp" />

            <Button
                android:id="@+id/test"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                style="@style/dialog_blue_button"
                android:layout_gravity="center"
                android:text="Tester et Sauvegarder"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/ticket_mode"
                android:layout_alignLeft="@+id/ticket_mode" />

            <TextView
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Model de ticket :"
                android:id="@+id/ticket_mode"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/port"
                android:layout_alignLeft="@+id/textView5" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_marginLeft="5dp"
                android:layout_height="25dp"
                android:src="@mipmap/network_ethernet_ok"
                android:id="@+id/image_mode"
                android:layout_above="@+id/test"
                android:layout_toRightOf="@+id/textView5" />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/spinner_model_tickets"
                android:textColor="@color/concrete"
                android:entries="@array/array_model_ticket"
                android:layout_above="@+id/test"
                android:layout_alignLeft="@+id/port" />

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/port"
                android:text="9100"
                android:textColor="@color/concrete"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignRight="@+id/title_reciep_printer_configuration"
                android:layout_marginRight="15dp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_marginLeft="5dp"
                android:layout_height="25dp"
                android:src="@mipmap/network_ethernet_ok"
                android:id="@+id/imageView8"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignLeft="@+id/imageView7" />

            <TextView
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Des Imprimente :"
                android:layout_marginTop="24dp"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/textView5" />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/spinner_list_imp"
                android:textColor="@color/concrete"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_alignLeft="@+id/port" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
